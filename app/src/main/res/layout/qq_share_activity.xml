<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
	<include layout="@layout/java_tool"/>
    <!-- 选择分享类型 -->
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="10dp"
		android:paddingTop="5dp"
		android:gravity="center_vertical"
		android:text="内容类型："
		android:textSize="16sp"
		android:textColor="?attr/textPrimary"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
        android:gravity="center|left"
        android:orientation="horizontal">
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <RadioButton
                android:id="@+id/radioBtn_share_type_default"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="默认" />
            <RadioButton
                android:id="@+id/radioBtn_share_type_audio"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="音乐" />
            <RadioButton
                android:id="@+id/radioBtn_share_type_image"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="图片" />
            <RadioButton
                android:id="@+id/radioBtn_share_type_app"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
				android:visibility="invisible"
                android:text="应用" />
        </RadioGroup>
    </LinearLayout>
    <!-- qzone特殊要求 -->
    <LinearLayout
        android:id="@+id/qzone_specail_radio_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
        android:layout_gravity="center|left"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_qzone_special_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
			android:textSize="16sp"
			android:textColor="?attr/textPrimary"
            android:text="QQ空间：" />
        <CheckBox
            android:id="@+id/checkBox_qzone_auto_open"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Qzone弹窗" />
        <CheckBox
            android:id="@+id/checkBox_qzone_item_hide"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Qzone隐藏" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:scrollbars="none" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
            android:orientation="vertical" >
            <!-- title -->
            <LinearLayout
                android:id="@+id/qqshare_title_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="标题："
					android:textSize="16sp"
					android:textColor="?attr/textPrimary"/>
                <EditText
                    android:id="@+id/shareqq_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="请输入消息标题"
                    android:text="消息标题" />
			</LinearLayout>
			<!-- summary -->
			<LinearLayout
				android:id="@+id/qqshare_summary_container"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center|left"
				android:orientation="vertical" >
				<TextView
                    android:id="@+id/tv_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="内容："
					android:textSize="16sp"
					android:textColor="?attr/textPrimary"/>
                <EditText
                    android:id="@+id/shareqq_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入内容"
                    android:text="分享内容" />
            </LinearLayout>
            <!-- audioUrl -->
            <LinearLayout
                android:id="@+id/qqshare_audioUrl_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="音乐URL："
					android:textSize="16sp"
					android:textColor="?attr/textPrimary"/>
                <EditText
                    android:id="@+id/et_shareqq_audioUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="http://music.qq.com/xxxxx"
                    android:inputType="textUri|textMultiLine"
                    android:text="" />
            </LinearLayout>
            <!-- targetUrl -->
            <LinearLayout
                android:id="@+id/qqshare_targetUrl_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="目标URL："
					android:textSize="16sp"
					android:textColor="?attr/textPrimary"/>
                <EditText
                    android:id="@+id/shareqq_target_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入目标地址"
                    android:inputType="textUri|textMultiLine"
                    android:text="http://im.qq.com" />
            </LinearLayout>
            <!-- imageUrl -->
            <LinearLayout
                android:id="@+id/qqshare_imageUrl_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text="图片类型："
						android:textSize="16sp"
						android:textColor="?attr/textPrimary"/>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >
                        <RadioButton
                            android:id="@+id/radioBtn_net_image"
                            android:layout_width="0dip"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="网络图片"/>
                        <RadioButton
                            android:id="@+id/radioBtn_local_image"
                            android:layout_width="0dip"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="本地图片"/>
                    </RadioGroup>
                </LinearLayout>
                <EditText
                    android:id="@+id/shareqq_image_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="请输入图片URL"
                    android:inputType="textUri|textMultiLine"
                    android:text="" />
            </LinearLayout>
            <!-- appName -->
            <LinearLayout
                android:id="@+id/qqshare_appName_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="应用名称："
					android:textSize="16sp"
					android:textColor="?attr/textPrimary"/>
                <EditText
                    android:id="@+id/shareqq_app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入应用名称"
                    android:text="@string/app_name" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/shareqq_commit"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
			android:background="@drawable/btn_button"
			android:textSize="16sp"
			android:textColor="@color/white"
            android:text="提交" />
    </LinearLayout>
</LinearLayout>
