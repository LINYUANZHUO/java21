<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:orientation="vertical">
	<com.vbea.java21.widget.SlidingView
		android:id="@+id/item_slidingBox"
		android:layout_height="wrap_content"
		android:layout_width="match_parent">
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/item_leftMenu"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:textSize="16sp"
				android:padding="10dp"
				android:gravity="center"
				android:text="设为已读"
				android:textColor="@color/white"
				android:background="?attr/colorAccent"/>
			<LinearLayout
				android:id="@+id/item_messageBox"
				android:background="@drawable/btn_menu"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="10dp"
				android:orientation="vertical">
				<TableRow
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<TextView
						android:id="@+id/item_messageTitle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:singleLine="true"
						android:textSize="16sp"
						android:textColor="?attr/textPrimary"/>
					<TextView
						android:id="@+id/item_messageDate"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="14sp"
						android:textColor="@color/gray"
						android:singleLine="true"
						android:gravity="center_vertical|right"/>
				</TableRow>
				<TextView
					android:id="@+id/item_messageContent"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="14sp"
					android:textColor="@color/grey"/>
			</LinearLayout>
			<TextView
				android:id="@+id/item_rightMenu"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="12dp"
				android:textSize="16sp"
				android:gravity="center"
				android:text="删除"
				android:textColor="@color/white"
				android:background="@color/alred"/>
		</LinearLayout>
	</com.vbea.java21.widget.SlidingView>
	<RelativeLayout
		android:id="@+id/item_end"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:visibility="gone">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:layout_centerVertical="true"
			android:background="#AAAAAA"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:background="@color/dividers"
			android:text="我是有底线的"
			android:textSize="12sp"
			android:textColor="#9A9A9A"/>
	</RelativeLayout>
</LinearLayout>

