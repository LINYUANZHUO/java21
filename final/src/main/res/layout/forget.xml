<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical">
	<include layout="@layout/java_tool"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="16dp"
		android:background="?attr/titleColor">
		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp">
			<EditText
				android:id="@+id/forUsername"
				android:layout_width="match_parent"
				android:layout_height="fill_parent"
				android:textSize="16sp"
				android:maxLength="11"
				android:singleLine="true"
				android:hint="@string/java_username"/>
		</android.support.design.widget.TextInputLayout>
		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<EditText
				android:id="@+id/forEmail"
				android:layout_width="match_parent"
				android:layout_height="fill_parent"
				android:singleLine="true"
				android:hint="@string/java_fmail"
				android:textSize="16sp"/>
		</android.support.design.widget.TextInputLayout>
		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<EditText
				android:id="@+id/forPhone"
				android:layout_width="match_parent"
				android:layout_height="fill_parent"
				android:singleLine="true"
				android:textSize="16sp"
				android:hint="@string/java_forphone"/>
		</android.support.design.widget.TextInputLayout>
		<Button
			android:id="@+id/btnForget"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:layout_marginTop="16dp"
			android:background="@drawable/btn_button"
			android:textColor="@color/white"
			android:textSize="18sp"
			android:text="@string/forgetpsd"/>
	</LinearLayout>
</LinearLayout>

