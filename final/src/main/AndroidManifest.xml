<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.vbea.java21">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:allowBackup">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Themes"
            android:label="@string/setheme"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ApiWord"
            android:label="@string/apidoc"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".TextReplace"
            android:label="@string/textEditor" />
        <activity
            android:name=".Knowledge"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".AndroidWeb"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MusicList"
            android:label="@string/morelist"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FileSelect"
            android:label="@string/fileselect"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Modelist"
            android:label="@string/modelist"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Setting"
            android:label="@string/settings" />
        <activity
            android:name=".Help"
            android:label="@string/help" />
        <activity
            android:name=".More"
            android:label="@string/more"
            android:launchMode="singleTask" />
        <activity
            android:name=".Piano"
            android:label="@string/piano"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MusicTest"
            android:label="@string/musictest"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".MusicTrans"
            android:label="@string/musictrans"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Bookmark"
            android:label="@string/bookmark"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BrowserSet"
            android:label="@string/browserset"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".History"
            android:label="@string/history"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VbeStudio"
            android:label="@string/aboutus" />
        <activity
            android:name=".About"
            android:label="@string/about" />
        <activity
            android:name=".Donate"
            android:label="@string/donate"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Decord"
            android:label="@string/decord"
            android:screenOrientation="portrait" />
        <service
            android:name=".audio.AudioService"
            android:exported="false" />
        <provider
            android:name="com.tencent.mid.api.MidProvider"
            android:authorities="com.vbea.java21.TENCENT.MID.V3"
            android:exported="true" />
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/xml_paths" />
        </provider>
        <meta-data
            android:name="TA_APPKEY"
            android:value="A1M46EZRJ7WI" />
        <meta-data
            android:name="InstallChannel"
            android:value="${InstallChannel}" />
        <meta-data
            android:name="android.max_aspect"
            android:value="2.2" />
    </application>

</manifest>